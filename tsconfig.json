{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "DOM",
      "ES2024"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "skipLibCheck": true
  },
  "exclude": [
    "example",
    "node_modules"
  ]
}
